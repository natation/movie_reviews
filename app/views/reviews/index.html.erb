<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>All Reviews</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
      <% if @reviews.empty? %>
        <h4>No reviews</h4>
      <% end %>
      <%= render @reviews, movie_show: false %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
      <a class="btn btn-default btn-warning" href="/">Back to all movies</a>
    </div>
  </div>
</div>
