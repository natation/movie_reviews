<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><%= @movie.title %></h1>
      <img src="<%= @movie.poster_path %>" alt="Poster">
    </div>
  </div>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-2">
      <strong>Release Date:</strong>
    </div>
    <div class="col-xs-2">
      <%= @movie.release_date %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-2">
      <strong>Genre:</strong>
    </div>
    <div class="col-xs-2">
      <%= @movie.genre %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-2">
      <strong>Overview:</strong>
    </div>
    <div class="col-xs-5">
      <%= @movie.overview %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-2">
      <strong>Average Review Rating:</strong>
    </div>
    <div class="col-xs-5">
      <% reviews = @movie.reviews %>
      <% if reviews.length > 0 %>
        <%= reviews.average(:rating) %>
      <% else %>
        No reviews yet
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
      <h1>Reviews</h1>
    </div>
  </div>
  <% reviews = @movie.reviews %>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
      <% if reviews.empty? %>
        <h4>No reviews</h4>
      <% end %>
      <%= render reviews, movie_show: true %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
      <div class="panel panel-default">
        <div class="panel-body">
          <%= render 'reviews/review_form', movie: @movie, review: @review %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-3">
      <a class="btn btn-default btn-warning" href="/">Back to all movies</a>
    </div>
    <div class="col-xs-3">
      <a href="<%= reviews_url %>" class="btn btn-default btn-primary">
        See all reviews
      </a>
    </div>
  </div>
</div>
